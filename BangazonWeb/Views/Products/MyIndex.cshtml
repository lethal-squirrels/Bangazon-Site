@model Bangazon.Models.ProductViewModels.ProductListViewModel

@{
    ViewData["Title"] = "Product Listing";
}

<h2 class="top-buffer">@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Posted</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>

    @foreach (var product in Model.Products)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@product.ProductID">
                    @Html.DisplayFor(modelItem => product.Name)
                </a>
            </td>
            <td>@Html.DisplayFor(modelItem => product.Description)</td>
            <td>@Html.DisplayFor(modelItem => product.DateCreated)</td>
            <td>@Html.DisplayFor(modelItem => product.Quantity)</td>
            <td>@Html.DisplayFor(modelItem => product.Price)</td>
           <td><button><a asp-action="Delete" asp-route-id="@product.ProductID">Delete</a></button></td>
        </tr>
    }

</table>