@model Bangazon.Models.OrderViewModels.CompleteOrder

@{
    ViewData["Title"] = "Complete Order";
}
<h3>Order @Model.Order.OrderID</h3>
<hr />
<h3>Choose a Payment Type</h3>
<form asp-action="CompleteOrderConfirmed">
    <div class="col-md-10">
        @Html.DropDownList(
                    "Order.PaymentTypeID",
                    @Model.PaymentTypeId,
                    new
                    {
                        @name = "Order.PaymentTypeID"
                    }
                )
        @Html.ValidationMessageFor(model => model.Order.PaymentTypeID, "", new { @class = "text-danger" })
    </div>
    <input type="submit" value="Complete Order" class="btn btn-success" />
</form>
<hr />

