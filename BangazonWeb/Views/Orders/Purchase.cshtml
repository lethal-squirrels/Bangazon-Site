@model Bangazon.Models.OrderViewModels.PurchaseViewModel

@{
    ViewData["Title"] = "You Have Added a Product To Your Shopping Cart";
}

<h2>@Html.DisplayFor(model => model.Product.Name)</h2>

<div class="row">
    <div class="col-md-3">@Html.DisplayFor(model => model.Product.Description)</div>
    <div class="col-md-3">@Html.DisplayFor(model => model.Product.Price)</div>
    <div class="col-md-3"><a asp-controller="Orders" asp-action="ShoppingCart">View Shopping Cart</a></div>
    <div class="col-md-3"><a asp-controller="Products" asp-action="Index">Back to Products</a></div>
</div>

<div>
    &lt;&lt; <a asp-controller="Products" asp-action="Index">Back to List</a>
</div>
