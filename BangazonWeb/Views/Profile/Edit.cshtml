@model Bangazon.Models.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<h2>Edit My Profile</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="User.Id" />
        <div class="form-group">
            <label asp-for="User.FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.FirstName" class="form-control" />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="User.LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="User.StreetAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.StreetAddress" class="form-control" />
                <span asp-validation-for="User.StreetAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="User.City" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.City" class="form-control" />
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="User.State" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="User.State" class="form-control">
                <span asp-validation-for="User.State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="User.ZipCode" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="User.ZipCode" class="form-control">
                <span asp-validation-for="User.ZipCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="User.Phone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="User.Phone" class="form-control" />
                <span asp-validation-for="User.Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to My Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
